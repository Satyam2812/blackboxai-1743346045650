<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Music Distribution Platform</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-gray-100">
  <nav class="bg-purple-800 text-white p-4">
    <div class="container mx-auto flex justify-between items-center">
      <a href="/" class="text-2xl font-bold">MusicDistro</a>
      <div>
        <% if (typeof user !== 'undefined' && user) { %>
          <div class="flex items-center space-x-4">
            <span>Welcome, <%= user.email %></span>
            <% if (user.role === 'admin') { %>
              <a href="/admin" class="hover:text-purple-200">Admin Dashboard</a>
            <% } %>
            <a href="/dashboard" class="hover:text-purple-200">Dashboard</a>
            <a href="/logout" class="hover:text-purple-200">Logout</a>
          </div>
        <% } else { %>
          <div class="space-x-4">
            <a href="/login" class="hover:text-purple-200">Login</a>
            <a href="/signup" class="hover:text-purple-200">Signup</a>
          </div>
        <% } %>
      </div>
    </div>
  </nav>

  <main class="container mx-auto p-4">
    <%- body %>
  </main>

  <footer class="bg-gray-800 text-white p-4 mt-8">
    <div class="container mx-auto text-center">
      &copy; 2023 Music Distribution Platform
    </div>
  </footer>
</body>
</html>